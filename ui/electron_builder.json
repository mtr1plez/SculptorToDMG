{
  "appId": "com.sculptorpro.app",
  "productName": "Sculptor Pro",
  "copyright": "Copyright Â© 2025 Sculptor Pro",
  "directories": {
    "output": "dist",
    "buildResources": "electron/resources"
  },
  "files": [
    "dist-vite/**/*",
    "electron/main.js",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "../dist/SculptorProServer",
      "to": "server",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "category": "public.app-category.video",
    "icon": "electron/resources/icon.icns",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "electron/entitlements.mac.plist",
    "entitlementsInherit": "electron/entitlements.mac.plist"
  },
  "dmg": {
    "title": "Sculptor Pro",
    "icon": "electron/resources/icon.icns",
    "background": "electron/resources/dmg-background.png",
    "window": {
      "width": 660,
      "height": 400
    },
    "contents": [
      {
        "x": 180,
        "y": 170
      },
      {
        "x": 480,
        "y": 170,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "win": {
    "target": ["nsis"],
    "icon": "electron/resources/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}